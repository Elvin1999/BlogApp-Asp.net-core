@model IEnumerable<Category>

<ul class="list-group">
    @foreach (var item in Model)
    {

        <a asp-controller="Blog" asp-action="Index" asp-route-id="@item.CategoryId" class="list-group-item mt-1
           @(ViewBag.SelectedCategory==item.CategoryId.ToString()?"active":"")">
            @item.Name
        </a>
    
    }

</ul>






