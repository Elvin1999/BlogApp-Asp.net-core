@model IEnumerable<Blog>
@if (Model.Count() == 0)
{

    <div class="alert alert-warning">There is no any data . . .</div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card mb-2">
            <img class="card-img-top" src="~/images/@item.Image" style="height:300px;width:300px;" />
            <div class="card-header">
                @item.Title
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Description</p>
                <a asp-controller="Blog" asp-action="ShowMore"
                   asp-route-id="@item.BlogId"
                   class="btn btn-primary">Show More</a>
            </div>
        </div>
    }
}
