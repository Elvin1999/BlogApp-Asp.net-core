@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-3">
    <h2>Blog List</h2>
    <hr/>
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Is Approved</th>
                            <th>Is From Home</th>
                            <th>Is Slider </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.BlogId</td>
                            <td>
                                <img style="border-radius:50%;" src="~/images/@item.Image" width="200" height="200" />
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Date</td>
                            <td>

                                @if (item.IsApproved)
                                {
                                    <i style="color:lawngreen;font-size:25px;" class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i style="color:orangered;font-size:25px;" class="fa fa-times" aria-hidden="true"></i>
                                }

                            </td>
                            <td>

                                @if (item.IsHome)
                                {
                                    <i style="color:lawngreen;font-size:25px;" class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i style="color:orangered;font-size:25px;" class="fa fa-times" aria-hidden="true"></i>
                                }

                            </td>
                            <td>

                                @if (item.IsSlider)
                                {
                                    <i style="color:lawngreen;font-size:25px;" class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i style="color:orangered;font-size:25px;" class="fa fa-times" aria-hidden="true"></i>
                                }

                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
                                    Details
                                </a>
                                <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Blog did not add . . .
                </div>
            }
        </div>
    </div>
</div>
